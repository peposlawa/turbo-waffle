{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --max-warnings 0",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "14.2.7",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.7",
    "eslint-plugin-react": "^7.35.1",
    "globals": "^15.9.0",
    "husky": "^9.1.5"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "next"
    ],
    "rules": {
      "strict": [
        "error",
        "global"
      ],
      "no-unused-vars": "warn",
      "no-undef": "error",
      "no-console": "warn",
      "semi": [
        "error",
        "always"
      ],
      "no-var": "error"
    },
    "env": {
      "browser": true,
      "node": true
    }
  }
}
